<?xml version="1.0" encoding="UTF-8"?>
<pages:PageBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KIDS.MOBILE.APP.PARENTS.Views.MedicineAdvise.CreteMedicineAdvisePage"
             xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:loadingView="clr-namespace:KIDS.MOBILE.APP.PARENTS.Controls.LoadingView;assembly=KIDS.MOBILE.APP.PARENTS"
             xmlns:markupExtension="clr-namespace:KIDS.MOBILE.APP.PARENTS.MarkupExtensions;assembly=KIDS.MOBILE.APP.PARENTS"
             xmlns:pages="clr-namespace:KIDS.MOBILE.APP.PARENTS.Views">

    <Grid HorizontalOptions="FillAndExpand"
          VerticalOptions="FillAndExpand"
          BackgroundColor="#f0eded">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     Orientation="Horizontal"
                     Padding="5,10,5,10"
                     BackgroundColor="White"
                     Grid.Row="0">
            <Image Source="back.png"
                   HorizontalOptions="Start">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}"/>
                </Image.GestureRecognizers>
            </Image>
            <Label HorizontalOptions="CenterAndExpand"
                   Text="{markupExtension:Translate 00042}"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="24">
            </Label>
        </StackLayout>

        <Label Text="{markupExtension:Translate 00094}"
               TextColor="Black"
               FontSize="16"
               FontAttributes="Bold"
               Grid.Row="3"
               Margin="10,0,10,0"
               HeightRequest="40"/>

        <Grid HorizontalOptions="FillAndExpand"
              HeightRequest="40"
              Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DatePicker BackgroundColor="White"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Format="yyyy-MM-dd"
                    FontSize="16"
                    TextColor="Black"
                    Date="{Binding FromDate}"
                    Margin="10,5,5,5"
                    HeightRequest="40"
                    Grid.Column="0"/>

            <DatePicker BackgroundColor="White"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Format="yyyy-MM-dd"
                    FontSize="16"
                    TextColor="Black"
                    Date="{Binding ToDate}"
                    Margin="5,5,10,5"
                    HeightRequest="40"
                    Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="6"
              HorizontalOptions="FillAndExpand"
              HeightRequest="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            
            <Label Text="{markupExtension:Translate 00095}"
               TextColor="Black"
               FontSize="16"
               FontAttributes="Bold"
               Grid.Row="0"
               Grid.Column="0"
               Margin="10,0,10,0"/>
            
            <Image HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Source="{Binding ChooseImage1}" 
                   Aspect="AspectFill"
                   Grid.Column="0"
                   Grid.Row="1"
                   Margin="10,5,5,5">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GalleryCommand}"/>
                </Image.GestureRecognizers>
            </Image>

            <Label Text="Ghi chú"
               TextColor="Black"
               FontSize="16"
               FontAttributes="Bold"
               Grid.Row="0"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Margin="10,0,10,0"/>

            <Editor Placeholder="Nhập ghi chú cho đơn dặn thuốc cho bé"
                   TextColor="Black"
                   FontSize="16"
                   Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="10,0,10,0"
                    BackgroundColor="White"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Text="{Binding MessageContent}"/>
        </Grid>

        <ScrollView HorizontalOptions="FillAndExpand"
                     Grid.Row="7"
                     VerticalScrollBarVisibility="Never">
            <syncfusion:SfListView HorizontalOptions="FillAndExpand"
                               AutoFitMode="DynamicHeight"
                               ItemsSource="{Binding MedicineList}"
                               Margin="10,5,10,5"
                               FlowDirection="MatchParent">
                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                  HeightRequest="60">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <Image
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    Source="{Binding Image}"
                                    Aspect="AspectFit"
                                    Margin="5,5,5,5"
                                    Grid.Column="0"/>
                                <Editor HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    TextColor="Black"
                                    FontSize="12"
                                    BackgroundColor="White"
                                    Margin="5"
                                    Placeholder="Tên thuốc..."
                                    PlaceholderColor="Gray"
                                    Text="{Binding Name}"
                                    Grid.Column="1"/>
                                <Editor HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    TextColor="Black"
                                    FontSize="12"
                                    BackgroundColor="White"
                                    Margin="0,5,0,5"
                                    Placeholder="Đơn vị..."
                                    PlaceholderColor="Gray"
                                    Text="{Binding Unit}"
                                    Grid.Column="2"/>
                                <Editor HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    TextColor="Black"
                                    FontSize="12"
                                    BackgroundColor="White"
                                    Margin="5"
                                    Placeholder="Ghi chú..."
                                    PlaceholderColor="Gray"
                                    Text="{Binding MessageContent}"
                                    Grid.Column="3"/>
                                <Image
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    Source="remove.png"
                                    Aspect="AspectFit"
                                    Margin="5,5,5,5"
                                    Grid.Column="4">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Delete_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>
        </ScrollView>

        <Button Grid.Row="8"
                HorizontalOptions="FillAndExpand"
                Margin="10,10,10,10"
                Command="{Binding SendCommand}"
                Style="{StaticResource SummitButton}"
                Text="{markupExtension:Translate 00011}"/>

        <loadingView:LoadingView
                Grid.Row="3"
                IsVisible="{Binding IsLoading}"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"/>
    </Grid>

</pages:PageBase>
