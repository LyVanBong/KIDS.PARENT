<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="KIDS.MOBILE.APP.PARENTS.Views.Login.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
    xmlns:markupExtension="clr-namespace:KIDS.MOBILE.APP.PARENTS.MarkupExtensions;assembly=KIDS.MOBILE.APP.PARENTS"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <ContentView x:Name="LoginView">
            <Grid 
                Margin="0"
                Padding="0"
                BackgroundColor="White"
                RowSpacing="0"
                RowDefinitions="*,2*">
                <!--<forms:AnimationView
                    Grid.Row="0"
                    Animation=""
                    HorizontalOptions="FillAndExpand"
                    IsPlaying="True"
                    VerticalOptions="FillAndExpand"/>-->
                <Image
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Aspect="AspectFit"
                    Source="{markupExtension:ImageResource }"/>
            </Grid>
        </ContentView>
    </ContentPage.Content>
</ContentPage>